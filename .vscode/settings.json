{
    "go.goroot": "${workspaceFolder}/bazel-wow_server_go/external/go_sdk",
    "go.toolsEnvVars": {
        // "GOPACKAGESDRIVER": "${workspaceFolder}/tools/bazel/gopackagesdriver.sh"
    },
    "go.enableCodeLens": {
        "references": false,
        "runtest": false
    },
    "gopls": {
        "build.directoryFilters": [
            "-bazel-bin",
            "-bazel-out",
            "-bazel-testlogs",
            "-bazel-wow_server_go",
        ],
        "formatting.gofumpt": true,
        "formatting.local": "github.com/jeshuamorrissey/wow_server_go",
        "ui.completion.usePlaceholders": true,
        "ui.semanticTokens": true,
        "ui.codelenses": {
            "gc_details": false,
            "regenerate_cgo": false,
            "generate": false,
            "test": false,
            "tidy": false,
            "upgrade_dependency": false,
            "vendor": false
        },
    },
    "go.useLanguageServer": true,
    "go.buildOnSave": "off",
    "go.lintOnSave": "off",
    "go.vetOnSave": "off",
    "python.formatting.provider": "yapf",
}